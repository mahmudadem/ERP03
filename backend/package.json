{
  "name": "erp-enhanced-backend",
  "version": "1.0.0",
  "description": "ERP Enhanced Backend",
  "main": "lib/backend/src/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "firebase emulators:start --import=../emulator-data --export-on-exit --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "seed:demo": "ts-node --transpile-only src/seeder/runDemoSeeder.ts",
    "seed:onboarding": "ts-node --transpile-only src/seeder/seedOnboardingData.ts"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "firebase-tools": "^14.27.0",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.0"
  },
  "private": true
}
